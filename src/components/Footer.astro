  <!-- JivoChat - Código estándar con mejoras de compatibilidad -->
  <script is:inline>
    (function(){
      // Tu ID de widget de JivoSite
      var widget_id = 'PgpmFYkQWG';
      var d = document;
      var w = window;
      
      // Función para cargar el script
      function loadJivoChat() {
        // Evitar carga múltiple
        if (window.jivo_loaded) return;
        window.jivo_loaded = true;
        
        // Crear y configurar el script
        var s = d.createElement('script');
        s.type = 'text/javascript';
        s.async = true;
        // Usar https para mayor seguridad
        s.src = 'https://code.jivosite.com/script/widget/' + widget_id;
        
        // Manejo de eventos para depuración
        s.onload = function() {
          console.log('JivoChat cargado correctamente');
        };
        
        s.onerror = function() {
          console.error('Error al cargar JivoChat');
          // Reintentar después de 5 segundos en caso de error
          setTimeout(loadJivoChat, 5000);
        };
        
        // Insertar el script en el documento
        var ss = d.getElementsByTagName('script')[0];
        if (ss && ss.parentNode) {
          ss.parentNode.insertBefore(s, ss);
        } else {
          // Si no se puede insertar antes del primer script, añadirlo al body
          d.body.appendChild(s);
        }
      }
      
      // Cargar cuando el documento esté listo
      if (d.readyState === 'complete' || d.readyState === 'interactive') {
        // El documento ya está listo o casi listo
        loadJivoChat();
      } else if (w.addEventListener) {
        // Navegadores modernos
        w.addEventListener('load', loadJivoChat, false);
      } else if (w.attachEvent) {
        // IE8 y navegadores antiguos
        w.attachEvent('onload', loadJivoChat);
      } else {
        // Último recurso
        w.onload = loadJivoChat;
      }
      
      // Cargar después de 3 segundos como respaldo
      setTimeout(loadJivoChat, 3000);
      
      // Cargar al primer evento de interacción del usuario
      ['click', 'scroll', 'mousemove', 'keydown', 'touchstart'].forEach(function(event) {
        w.addEventListener(event, function loadOnInteraction() {
          loadJivoChat();
          // Eliminar el event listener después de la primera interacción
          w.removeEventListener(event, loadOnInteraction, false);
        }, { once: true, passive: true });
      });
    })();
  </script>
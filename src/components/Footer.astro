    <!-- Jivosite Chat - Optimizado -->
  <script>
    (function() {
      let jivositeLoaded = false;
      let jivositeTimeout = null;
      let userInteracted = false;

      function loadJivosite() {
        if (!jivositeLoaded && userInteracted) {
          jivositeLoaded = true;
          const script = document.createElement('script');
          script.src = 'https://code.jivosite.com/js/bundle_es.js?rand=' + new Date().getTime();
          script.async = true;
          script.defer = true;
          document.body.appendChild(script);
        }
      }

      // Solo cargar después de 15 segundos si no hay interacción
      jivositeTimeout = setTimeout(() => {
        if (!userInteracted) {
          loadJivosite();
        }
      }, 15000);

      // Eventos de interacción del usuario
      const interactionEvents = ['scroll', 'mousemove', 'click', 'touchstart', 'keydown'];
      interactionEvents.forEach(event => {
        window.addEventListener(event, () => {
          if (!userInteracted) {
            userInteracted = true;
            if (jivositeTimeout) {
              clearTimeout(jivositeTimeout);
              jivositeTimeout = null;
            }
            // Cargar solo si el usuario está en la página por más de 5 segundos
            setTimeout(loadJivosite, 5000);
          }
        }, { once: true, passive: true });
      });

      // Detectar conexión lenta usando Network Information API
      if ('connection' in navigator) {
        const connection = (navigator as any).connection;
        if (connection && connection.effectiveType) {
          const slowConnections = ['slow-2g', '2g', '3g'];
          if (slowConnections.includes(connection.effectiveType)) {
            if (jivositeTimeout) {
              clearTimeout(jivositeTimeout);
              jivositeTimeout = null;
            }
          }
        }
      }
    })();
  </script>
<style>
  .portfolio-grid {
    display: flex;
    flex-wrap: wrap;
    margin: -15px;
  }

  .portfolio-item {
    padding: 15px;
    margin-bottom: 0;
  }

  .luminix-team-thumb {
    position: relative;
    overflow: hidden;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    aspect-ratio: 3/2;
  }

  .luminix-team-thumb img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .luminix-team-thumb:hover img {
    transform: scale(1.05);
  }

  .luminix-blog-thumb {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 15px;
    background: linear-gradient(to top, rgba(0,0,0,0.8), transparent);
    color: white;
    transition: all 0.3s ease;
  }

  .luminix-blog-thumb h5 {
    color: white;
    margin-bottom: 5px;
    font-size: clamp(14px, 2vw, 18px);
  }

  .luminix-blog-thumb p {

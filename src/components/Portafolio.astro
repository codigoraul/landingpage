<style>
  .luminix-team-thumb {
    position: relative;
    overflow: hidden;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
  }

  .luminix-team-thumb img {
    width: 100%;
    height: auto;
    transition: transform 0.3s ease;
  }

  .luminix-team-thumb:hover img {
    transform: scale(1.05);
  }

  .luminix-blog-thumb {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 15px;
    background: linear-gradient(to top, rgba(0,0,0,0.8), transparent);
    color: white;
  }

  .luminix-blog-thumb h5 {
    color: white;
    margin-bottom: 5px;
  }

  .luminix-blog-thumb p {
    color: rgba(255,255,255,0.9);
    margin: 0;
  }

  .luminix-blog-thumb a {
    color: white;
    text-decoration: none;
  }

  .luminix-blog-thumb a:hover {
    color: #007bff;
  }

  @media (max-width: 991px) {
    .col-lg-3 {
      margin-bottom: 30px;
    }
  }
</style>
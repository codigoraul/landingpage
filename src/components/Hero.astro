---
import { Image } from 'astro:assets';
import bgImage from '@images/bg-hero.webp';
import htmlImage from '@images/astro-img.jpg';
---

<!-- Precargar recursos críticos -->
<link rel="preload" href={bgImage.src} as="image" fetchpriority="high" />

<section class="luminix-hero-section section"> 
    <div class="hero-background">
        <Image 
            src={bgImage} 
            alt="Diseño web profesional en la Capital del Norte Chico"
            widths={[640, 768, 1024, 1440]}
            sizes="(max-width: 640px) 640px, (max-width: 768px) 768px, (max-width: 1024px) 1024px, 1440px"
            quality={75}
            class="bg-image"
            loading="eager"
            decoding="sync"
            fetchpriority="high"
            format="webp"
        />
    </div>
    <div class="container">
      <div class="row">
        <div class="col-lg-5 order-lg-2">
          <div class="luminix-hero-thumb" data-aos="fade-right" data-aos-duration="1000">
            <Image 
              src={htmlImage} 
              alt="Páginas web para empresas del Valle del Elqui"
              widths={[280, 440]}
              sizes="(max-width: 360px) 280px, 440px"
              quality={75}
              loading="eager"
              class="img-fluid"
              format="webp"
            />
          </div>
        </div>
        <div class="col-lg-7 d-flex align-items-center">
          <div class="luminix-hero-content3">
            <h1 class="hero-title fade-in">
              <span class="visually-hidden">Diseño Web Profesional La Serena</span>
              <span class="hero-title-text">Diseño Web Profesional La Serena</span>
            </h1>
            <p class="text fade-in">
              Especializados en diseño web para empresas del Valle del Elqui y turismo astronómico. Creamos sitios web únicos 
              para pisqueras, observatorios, hoteles y negocios serenenses que buscan brillar bajo los cielos más despejados de Chile. 
              Conectamos la tradición del Norte Chico con la tecnología digital moderna.</p>
            <div class="hero-btn btn2 mt-50 fade-in">
              <a href="#contacto" class="default-btn2 btn3">Contáctanos</a>
              <a href="#precio" class="default-btn3">Ver Precios</a>
            </div>
          </div>
        </div>
      </div>
    </div>
</section>

<style>
  /* Optimizar renderizado */
  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    min-height: 100vh;
    contain: layout size paint;
    z-index: -1;
    background-color: #001A3D;
    will-change: transform;
  }

  .bg-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    will-change: transform;
    contain: layout paint;
    transform: translateZ(0);
  }

  .hero-title {
    position: relative;
    margin: 0;
    padding: 0;
  }

  .hero-title-text {
    font-size: clamp(2rem, 5vw, 4rem);
    line-height: 1.2;
    display: inline-block;
    min-height: 1.2em;
  }

  .luminix-hero-section {
    position: relative;
    min-height: 100vh;
    display: grid;
    place-items: center;
    overflow: hidden;
    contain: layout paint size;
  }

  .luminix-hero-thumb {
    position: relative;
    width: 100%;
    max-width: 600px;
    margin: 0 auto;
  }

  .luminix-hero-thumb img {
    width: 100%;
    height: auto;
    border-radius: 10px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
  }

  .img-fluid {
    width: 100%;
    height: auto;
    object-fit: cover;
  }

  /* Animaciones CSS nativas para mejor rendimiento */
  .fade-in {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.8s ease-out forwards;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Aplicar delays escalonados */
  .hero-title.fade-in { animation-delay: 0.2s; }
  .text.fade-in { animation-delay: 0.4s; }
  .hero-btn.fade-in { animation-delay: 0.6s; }

  /* Reducir complejidad de animaciones en dispositivos móviles */
  @media (max-width: 768px) {
    .fade-in {
      opacity: 1;
      transform: none;
      animation: none;
    }
    
    .hero-background {
      min-height: auto;
      height: 100vh;
    }

    .luminix-hero-thumb {
      max-width: 100%;
    }
  }

  /* Respetar preferencias de reducción de movimiento */
  @media (prefers-reduced-motion: reduce) {
    .fade-in {
      opacity: 1;
      transform: none;
      animation: none;
    }
  }
</style>